{
   "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
   "contentVersion": "1.0.0.1",
   "parameters": {
    "resourceGroupInfo": {
      "type": "array"
    },
        "HubRGName": {
            "defaultValue": "Hub-RG",
            "type": "String"
        },
         "ProdRGName": {
            "defaultValue": "Spoke1_PROD-RG",
            "type": "String"
        },
         "DevRGName": {
            "defaultValue": "Spoke1_DEV-RG",
            "type": "String"
        },
          "UATRGName": {
            "defaultValue": "Spoke1_UAT-RG",
            "type": "String"
        }
     
   
   },
   "variables": {
        "templateRoot":"[deployment().properties.templateLink.uri]",
  "hasToken":"[not(equals(indexOf(variables('templateRoot'),'?'), -1))]",
  "sasToken":"[if(variables('hasToken'),substring(variables('templateRoot'),indexOf(variables('templateRoot'),'?')),'')]",
  "peeringTemplateUrl": "[replace(concat(uri(deployment().properties.templateLink.uri,'LandingZonePeering.json'),variables('sasToken')),'MasterTemplate','Networking')]",
     "hubTemplateUrl": "[replace(concat(uri(deployment().properties.templateLink.uri,'Hub-VNET.json'),variables('sasToken')),'MasterTemplate','Networking')]",
     "spokeProdTemplateUrl":"[replace(concat(uri(deployment().properties.templateLink.uri,'Spoke1_PROD-VNET.json'),variables('sasToken')),'MasterTemplate','Networking')]",
      "spokeDevTemplateUrl":"[replace(concat(uri(deployment().properties.templateLink.uri,'Spoke1_DEV-VNET.json'),variables('sasToken')),'MasterTemplate','Networking')]",
     "spokeUATTemplateUrl":"[replace(concat(uri(deployment().properties.templateLink.uri,'Spoke1_UAT-VNET.json'),variables('sasToken')),'MasterTemplate','Networking')]",
   
     "multiLocation": {
      "copy": [
        {
          "name": "location",
          "count": "[length(parameters('resourceGroupInfo'))]",
          "input": {
            "resourceGroupName": "[concat(parameters('resourceGroupInfo')[copyIndex('location')].resourceGroupName )]"
          
          }
        }
      ]
    }
   },
   "resources": [
       {
      "type": "Microsoft.Resources/resourceGroups",
      "location": "[parameters('resourceGroupInfo')[copyIndex()].resourceGroupLocation]",
      "name": "[variables('multiLocation').location[copyIndex()].resourceGroupName]",
      "apiVersion": "2018-05-01",
      
      "copy": {
        "name": "allResourceGroups",
        "count": "[length(parameters('resourceGroupInfo'))]"
      },
      "properties": {}
    },
      {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "HubRGDeployment",
            "resourceGroup":"Hub-RG",
            "dependsOn": [
            "[resourceId('Microsoft.Resources/resourceGroups/', parameters('HubRGName'))]"],
            "properties": {
               "mode": "Incremental",
               "templateLink": {
                  "uri": "[variables('hubTemplateUrl')]",
                  "contentVersion": "1.0.0.0"
               }
              
            }
      },
      {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "SpokeProdRGDeployment",
              "resourceGroup":"Spoke1_PROD-RG",
            "dependsOn": [
              "HubRGDeployment",
               "[resourceId('Microsoft.Resources/resourceGroups/', parameters('ProdRGName'))]"
              
            ],
            "properties": {
               "mode": "Incremental",
               "templateLink": {
                  "uri": "[variables('spokeProdTemplateUrl')]",
                  "contentVersion": "1.0.0.0"
               }
            
            }
      },
  
      {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "DevDeployment",
              "resourceGroup":"Spoke1_DEV-RG",
            "dependsOn": [
              "HubRGDeployment",
               "[resourceId('Microsoft.Resources/resourceGroups/', parameters('DevRGName'))]"

            ],
            "properties": {
               "mode": "Incremental",
               "templateLink": {
                  "uri": "[variables('spokeDevTemplateUrl')]",
                  "contentVersion": "1.0.0.0"
               }
            
            }
      },
      {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "UATDeployment",
              "resourceGroup":"Spoke1_UAT-RG",
            "dependsOn": [
              "HubRGDeployment",
               "[resourceId('Microsoft.Resources/resourceGroups/', parameters('UATRGName'))]"
            ],
            "properties": {
               "mode": "Incremental",
               "templateLink": {
                  "uri": "[variables('spokeUATTemplateUrl')]",
                  "contentVersion": "1.0.0.0"
               }
            
            }
      },
      {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "PeeringDeployment",
            "resourceGroup":"Spoke1_PROD-RG",
            "dependsOn": [
              "HubRGDeployment",
              "SpokeProdRGDeployment",
              "DevDeployment",
              "UATDeployment",
               "[resourceId('Microsoft.Resources/resourceGroups/', parameters('ProdRGName'))]",
         "[resourceId('Microsoft.Resources/resourceGroups/', parameters('HubRGName'))]",
         "[resourceId('Microsoft.Resources/resourceGroups/', parameters('DevRGName'))]",
         "[resourceId('Microsoft.Resources/resourceGroups/', parameters('UATRGName'))]"  
            ],
            "properties": {
               "mode": "Incremental",
               "templateLink": {
                  "uri": "[variables('peeringTemplateUrl')]",
                  "contentVersion": "1.0.0.0"
               }
            
            }
      }
   ]
}