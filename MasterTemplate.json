{
   "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": {
        "HubRGName": {
            "defaultValue": "HUB-RG",
            "type": "String"
        },
         "ProdRGName": {
            "defaultValue": "Spoke1_PROD-RG",
            "type": "String"
        }
   
   },
   "variables": {
     
   },
   "resources": [
       {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "CanadaCentral",
            "name": "Hub-RG",
            "properties": {}
      },
      {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "CanadaCentral",
            "name": "Spoke1_PROD-RG",
            "properties": {}
      },
      
      {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "HubRGDeployment",
            "resourceGroup":"Hub-RG",
            "dependsOn": [
            "[resourceId('Microsoft.Resources/resourceGroups/', parameters('HubRGName'))]"],
            "properties": {
               "mode": "Incremental",
               "templateLink": {
                  "uri": "https://raw.githubusercontent.com/ghostme/AzureAssets/Feature/Hub-RG.json",
                  "contentVersion": "1.0.0.0"
               }
              
            }
      },
      {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "SpokeProdRGDeployment",
              "resourceGroup":"Hub-RG",
            "dependsOn": [
              "HubRGDeployment",
               "[resourceId('Microsoft.Resources/resourceGroups/', parameters('ProdRGName'))]"
              
            ],
            "properties": {
               "mode": "Incremental",
               "templateLink": {
                  "uri": "https://raw.githubusercontent.com/ghostme/AzureAssets/Feature/Spoke1_PROD-RG.json",
                  "contentVersion": "1.0.0.0"
               }
            
            }
      }
   ]
}